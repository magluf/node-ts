{
  "name": "node-ts",
  "version": "0.0.1",
  "description": "Template project using Node.js + TypeScript",
  "main": "./src/server.ts",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "start": "npm run build && node dist/server.js",
    "heroku-start": "node server.js",
    "build-prod": "rm -rf dist && tsc -p . && ts-node util/prod-env.ts dist && npx prettier --write ./dist/",
    "build-heroku": "tsc -p . --outDir './heroku-dist' && ts-node util/prod-env.ts heroku-dist && npx prettier --write ./heroku-dist/",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magluf/node-ts.git"
  },
  "keywords": [
    "nodejs",
    "node",
    "javascript",
    "js",
    "typescript"
  ],
  "author": "Sergio Magluf",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/magluf/node-ts/issues"
  },
  "homepage": "https://github.com/magluf/node-ts#readme",
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.9.25"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/mongodb": "^3.5.25",
    "@types/mongoose": "^5.7.32",
    "@types/node": "^14.0.25",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "tsc": "^1.20150623.0",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.0"
  }
}
